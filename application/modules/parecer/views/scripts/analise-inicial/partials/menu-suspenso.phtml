<script>
    $3(document).ready(function ($) {

        $("#visualizar-form").on('click', function () {
            tinymce.remove();
        });

        $("#bt-analisar-custos").on('click', function() {
            $('ul.tabs').tabs('select_tab', 'tab-analise-custo');
            return false;
        });

        $("#bt-analisar-conteudo").on('click', function() {
            $('ul.tabs').tabs('select_tab', 'tab-analise-projeto');
        });

        if ($('#ir-para-o-topo').length) {
            var scrollTrigger = 100, // px
                backToTop = function () {
                    var scrollTop = $(window).scrollTop();
                    if (scrollTop > scrollTrigger) {
                        $('#ir-para-o-topo').parent().show();
                    } else {
                        $('#ir-para-o-topo').parent().hide();
                    }
                };
            backToTop();

            $(window).on('scroll', function () {
                backToTop();
            });

            $('#ir-para-o-topo').on('click', function (e) {
                e.preventDefault();
                $('html,body').animate({
                    scrollTop: 0
                }, 700);
            });
        }
    });
</script>